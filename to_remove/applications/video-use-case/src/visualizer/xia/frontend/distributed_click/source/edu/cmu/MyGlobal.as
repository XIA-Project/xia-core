package edu.cmu {	import flash.utils.Dictionary;	import flash.text.TextFormat;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.net.FileReference;	public class MyGlobal {				// Configuration vars		public static var server:String;		public static var layout:String;		public static var trafficType:String;		public static var showManagementTraffic:Boolean;		public static var showMap:Boolean;		public static var layoutFile:FileReference;		public static var shareMaxTrafficRate:Boolean;		public static var startingLinkInfoViewType:String;		public static var showControls:Boolean;		public static var showKey:Boolean;				public static var maxTrafficRate:int = 0;				private static var principalColors:Dictionary;				public static function getColorForPrincipal(principal:String):uint {			// Lazily instantiate defaults			if (principalColors == null) {				principalColors = new Dictionary();								principalColors["SID"] = 0xFFAA00;  // 				principalColors["CID"] = 0xFF0000;  // 				principalColors["4ID"] = 0x0000FF;  // 				principalColors["HID"] = 0x4D8B12;  // 				principalColors["AD"] = 0xFF00FF;// 			}						if (principalColors[principal] == null) {				// This is a principal we haven't seen yet; generate a random color for it				principalColors[principal] = Math.random()*0xFFFFFF;			}						return principalColors[principal];		}				public static function makeLabel(text:String, color:uint, size:uint = 11, bold:Boolean = false):TextField {			var textFormat:TextFormat = new TextFormat(); //("ArialEmbedded", size, color); 			textFormat.font = "Arial";			textFormat.size = size;			textFormat.bold = bold;						var label:TextField = new TextField();			label.defaultTextFormat = textFormat;			//label.embedFonts = true;			label.autoSize = TextFieldAutoSize.LEFT;			label.textColor = color;			label.text = text;						return label;		}	}}