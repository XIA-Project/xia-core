package edu.cmu.layouts {	import flash.geom.Point;	import edu.cmu.networkelements.*;		public class SimpleLayout extends Layout {				// Constants:		// Public Properties:		// Private Properties:			// Initialization:		public function SimpleLayout() { }			// Public Methods:		// Protected Methods:		protected override function GetPointForElement(element:NetworkElement):Point {						// SimpleLayout places routers in random locations near the center of			// the screen and hosts in random locations around the perimeter						var x:int;			var y:int;						if (element is Router) {  	// place in center				x = Math.random() * element.stage.stageWidth / 2 + element.stage.stageWidth / 4;				y = Math.random() * element.stage.stageHeight / 2 + element.stage.stageHeight / 4;			} else {  					// place around perimeter				x = Math.random() * element.stage.stageWidth / 2 + element.stage.stageWidth / 4;				if (x > element.stage.stageWidth / 4 && x < element.stage.stageWidth / 2) {					x -= element.stage.stageWidth / 4;				} else if (x > element.stage.stageWidth / 2 && x < 3 * element.stage.stageWidth / 4) {					x += element.stage.stageWidth / 4;				}								y = Math.random() * element.stage.stageHeight / 2 + element.stage.stageHeight / 4;				if (y > element.stage.stageHeight / 4 && y < element.stage.stageHeight / 2) {					y -= element.stage.stageHeight / 4;				} else if (y > element.stage.stageHeight / 2 && y < 3 * element.stage.stageHeight / 4) {					y += element.stage.stageHeight / 4;				}			}						return new Point(x, y);		}	}	}