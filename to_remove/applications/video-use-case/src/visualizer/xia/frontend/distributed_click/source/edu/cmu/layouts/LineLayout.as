package edu.cmu.layouts {	import flash.geom.Point;	import edu.cmu.networkelements.NetworkElement;		public class LineLayout extends Layout {				// Constants:		// Public Properties:		// Private Properties:		private var elementNum:int;			// Initialization:		public function SimpleLayout() {			elementNum = 0;		}			// Public Methods:		// Protected Methods:		protected override function GetPointForElement(element:NetworkElement):Point {						// LineLayout spaces elements evenly along a horizontal line						var x:int;			var y:int;						x = elementNum * (element.stage.stageWidth / (numElements-1));			y = element.stage.stageHeight / 2  -  element.height / 2;						elementNum = (elementNum + 1) % (numElements + 1);						return new Point(x, y);		}	}	}