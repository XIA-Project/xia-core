package edu.cmu.gui {	import flash.display.MovieClip;	import flash.events.*;	import flash.text.TextField;	import flash.utils.Dictionary;	import flash.display.Shape;		public class Floater extends MovieClip {				// Constants:		// Public Properties:		// Private Properties:		private var hasBeenMoved:Boolean;				// Initialization:		public function Floater() {			this.hasBeenMoved = false;									this.addEventListener(MouseEvent.MOUSE_DOWN, mouse_press);			this.addEventListener(MouseEvent.MOUSE_UP, mouse_release);		}			// Public Methods:				public function setPosition():void {			if (!hasBeenMoved) {				setDefaultPosition();			}		}						// Protected Methods:				protected function mouse_press(e:MouseEvent) {			this.startDrag();		}				protected function mouse_release(e:MouseEvent) {			hasBeenMoved = true;			this.stopDrag();		}				protected function setDefaultPosition():void {			this.x = 0;			this.y = 0;		}	}}